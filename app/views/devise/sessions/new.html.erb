<div class="container form-margin-login">
  <div class="row">
    <div class="col-md-5 d-flex align-items-center">
      <h1 class="form-heading">Log In</h1>
    </div>
      <div class="col-md-6 offset-md-1">
        <%= form_for(resource, as: resource_name, class: "mt-4 mt-md-0", url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, required: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, required: true, class: "form-control" %>
          </div>
        <% if devise_mapping.rememberable? %>
          <div class="actions">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div> <br>
        <% end %>
        <%= f.submit "Log In", class: "ctrl-standard fx-sliderIn btn-style btn-lg" %>
        <div class="btn" role="button" aria-pressed="true">
          <%= link_to "Sign Up", new_registration_path(resource_name), class: "ctrl-standard fx-sliderIn btn-style btn-lg" %>
        </div>
        <div class="btn" role="button" aria-pressed="true">
          <%= link_to "Forgot Your Password?", new_password_path(resource_name), class: "ctrl-standard fx-sliderIn btn-style btn-lg" %>
        </div>
      </div>
  </div>
<% end %>
</div>