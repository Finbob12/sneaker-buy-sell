  <div class="main-container">
    <div class="display-card">
        <h3>Brand: <%= @listing.brand %></h3>
    </div>
    <div class="display-card">
        <h3>Style: <%= @listing.style %></h3>
    </div>
    <div class="display-card">
        <h3>Size: <%= @listing.size %> (US mens)</h3>
    </div>
    <div class="display-card">
        <h3>Price: A$<%= @listing.price %></h3>
    </div>
    <div class="display-card">
        <h3>Description: <%= @listing.description %></h3>
    </div>
    <div class="display-card">
        <%= image_tag(@listing.picture, class: "shoe-pic") if @listing.picture.attached? %>
    </div>
    <h4>Listed by <%= @listing.user.username %> on <%= @listing.created_at.strftime("%m/%d/%Y") %></h4>
</div>
    <div>
      <% if @payment_button %>
        <div>
          <button data-stripe="payment">
            <h4>Buy now</h4>
          </button>
        <% end %>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
          document
            .querySelector("[data-stripe='payment']")
            .addEventListener("click", () => {
              const stripe = Stripe(
                "<%= Rails.application.credentials.dig(:stripe, :public_key) %>"
              );
          
              stripe.redirectToCheckout({
                sessionId: "<%= @session_id %>"
              });
            });
        </script>
      </div>
      <% if @listing.user.id != current_user.id %>
        <%= link_to "Message #{@listing.user.username}", conversations_path(sender_id: current_user.id, recipient_id: @listing.user.id), method: "post" %>
      <% end %>
<%= link_to 'Back', 'javascript:history.back()' %>
